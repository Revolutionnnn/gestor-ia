# ============================================
# E-Commerce Product Enrichment System
# Variables de Entorno - Configuración
# ============================================

# ==========================================
# BASE DE DATOS (PostgreSQL)
# ==========================================
POSTGRES_DB=ecommerce_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password
POSTGRES_PORT=5432

# ==========================================
# LLM / IA CONFIGURATION
# ==========================================
# Opción 1: Google Gemini
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-flash-latest

# Opción 2: OpenAI
# OPENAI_API_KEY=sk-your-openai-api-key-here
# OPENAI_MODEL=gpt-5-mini-2025-08-07

# ==========================================
# SERVICIOS - PUERTOS
# ==========================================
FRONTEND_PORT=5173
BACKEND_PORT=8000
IA_SERVICE_PORT=8001
ALERTS_SERVICE_PORT=8002
AUTH_SERVICE_PORT=8003

# ==========================================
# BACKEND PRINCIPAL
# ==========================================
LOW_STOCK_THRESHOLD=10
TIMEOUT_IA_SERVICE=35
ALERTS_WEBHOOK_TIMEOUT=10
TIMEOUT_WEBHOOK=10
TIMEOUT_DB=5
MAX_RETRIES=3

# ==========================================
# MICROSERVICIO DE ALERTAS
# ==========================================
MOCK_PRICE_URL=https://dummyjson.com/products/1
REQUEST_TIMEOUT=10

# ==========================================
# MICROSERVICIO DE AUTENTICACIÓN
# ==========================================
AUTH_JWT_SECRET=change-me
AUTH_JWT_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_REFRESH_TOKEN_EXPIRE_MINUTES=10080
AUTH_PASSWORD_MIN_LENGTH=8

# ==========================================
# FRONTEND
# ==========================================
VITE_API_URL=http://localhost:8000

# ==========================================
# LOGGING & DEBUGGING
# ==========================================
LOG_LEVEL=info

# ==========================================
# CORS (Cross-Origin Resource Sharing)
# ==========================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

# ==========================================
# CONFIGURACIÓN IMPORTANTE
# ==========================================
# Copiar este archivo: cp .env.example .env
# Editar .env con tus valores reales
# NUNCA hacer commit de .env (está en .gitignore)
